@model IEnumerable<RentalKendaraan_20200140145.Models.Kendaraan>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
@using(Html.BeginForm("Index", "Kendaraan", FormMethod.Get))
{
